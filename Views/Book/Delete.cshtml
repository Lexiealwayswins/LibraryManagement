@model LibraryManagement.ViewModels.BookViewModel

<h2>Delete Book</h2>
<h3>Are you sure you want to delete this book?</h3>

<div>
    <h4>Book Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.AuthorName</dd>
        <dt class="col-sm-2">Library Branch</dt>
        <dd class="col-sm-10">@Model.BranchName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="BookId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" class="btn btn-secondary">Cancel</a>
    </form>
</div>