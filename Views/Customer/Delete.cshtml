@model LibraryManagement.ViewModels.CustomerViewModel

<h2>Delete Customer</h2>
<h3>Are you sure you want to delete this customer?</h3>

<div>
    <h4>Customer Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
        <dt class="col-sm-2">Library Branch</dt>
        <dd class="col-sm-10">@Model.BranchName</dd>
        <dt class="col-sm-2">Borrowed Books</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.BorrowedBooksDisplay) ? "None" : Model.BorrowedBooksDisplay)</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CustomerId" />
        <input type="hidden" name="id" value="@Model.CustomerId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" class="btn btn-secondary">Cancel</a>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger mt-3">
            @ViewBag.ErrorMessage
        </div>
    }
</div>