@model LibraryManagement.ViewModels.CustomerViewModel

<h2>Edit Customer</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CustomerId" />
    <div class="form-group">
        <label asp-for="CustomerName" class="control-label">Customer Name</label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BranchName" class="control-label">Library Branch</label>
        <select asp-for="BranchName" class="form-control" asp-items="@(new SelectList(ViewBag.LibraryBranches, "BranchName", "BranchName"))">
            <option value="">Select a branch</option>
        </select>
        <span asp-validation-for="BranchName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BorrowedBookIds" class="control-label">Borrowed Books (Optional)</label>
        <select asp-for="BorrowedBookIds" class="form-control" multiple asp-items="@(new SelectList(ViewBag.Books, "BookId", "BookTitle"))" 
                asp-items-value="@(new SelectList(ViewBag.Books, "BookId", "BookId").Select(x => x.Value))">
            <option value="-1">No books selected</option> <!-- value=-1 represents no book borrowed -->
        </select>
        <small class="form-text text-muted">Hold Ctrl to select multiple books (optional).</small>
        <span asp-validation-for="BorrowedBookIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreatedAt" class="control-label">Created At</label>
        <input asp-for="CreatedAt" class="form-control" readonly />
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Details" class="btn btn-secondary">Cancel</a>
    </div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}