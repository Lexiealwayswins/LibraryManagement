@model LibraryManagement.ViewModels.LibraryBranchViewModel

<h2>Delete Library Branch</h2>
<h3>Are you sure you want to delete this branch?</h3>

<div>
    <h4>Library Branch Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Library Branch Name</dt>
        <dd class="col-sm-10">@Model.BranchName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="LibraryBranchId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" class="btn btn-secondary">Cancel</a>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger mt-3">
            @ViewBag.ErrorMessage
        </div>
    }
</div>