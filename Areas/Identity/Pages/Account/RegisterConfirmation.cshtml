@page
@model LibraryManagement.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="library-card">
                <h2 class="text-center text-library mb-4"><i class="fas fa-check-circle"></i> @ViewData["Title"]</h2>
                @if (@Model.DisplayConfirmAccountLink)
                {
                    <div class="alert alert-info text-center" role="alert">
                        <p class="mb-0">This app does not currently have a real email sender registered. See <a href="https://aka.ms/aspaccountconf">these docs</a> for configuration.</p>
                        <p>Normally, a confirmation link would be emailed: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a></p>
                    </div>
                }
                else
                {
                    <div class="alert alert-success text-center" role="alert">
                        <p class="mb-0"><i class="fas fa-envelope"></i> Please check your email to confirm your account.</p>
                        <a href="/" class="btn library-btn mt-3">Return to Home</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>