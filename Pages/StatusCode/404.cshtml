@page
@model MyApp.Namespace._404Model
@{
    ViewData["Title"] = "Page Not Found";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="library-card">
                <h2 class="text-center text-library mb-4"><i class="fas fa-search-minus"></i> @ViewData["Title"]</h2>
                <div class="text-center">
                    <h4 class="text-danger mb-3">404 Error</h4>
                    <p class="mb-3">Oops! It looks like the page you're looking for has wandered off the shelves.</p>
                    <div class="alert alert-custom mb-4" role="alert">
                        <p class="mb-0">Don't worry! The page might have been removed, renamed, or never existed. Let's get you back to safety.</p>
                    </div>
                    <a href="/" class="btn library-btn w-100 mb-3">Return to Home</a>
                    <p class="text-muted small">Error occurred at @DateTime.Now.ToString("hh:mm tt PDT on MMMM dd, yyyy")</p>
                </div>
            </div>
        </div>
    </div>
</div>